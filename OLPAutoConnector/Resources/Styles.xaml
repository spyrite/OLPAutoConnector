<ResourceDictionary x:Class="OLP.IntermodelCopier.Resources.Styles"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                    xmlns:resources="clr-namespace:OLP.IntermodelCopier.Resources">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Controls.xaml" />
        <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Fonts.xaml" />
        <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Colors.xaml" />
        <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Accents/Blue.xaml" />
        <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Accents/BaseLight.xaml" />
        <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Controls.AnimatedTabControl.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="InfoTextBlockStyle" TargetType="TextBlock" BasedOn="{StaticResource MetroTextBlock}">
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="10,0,10,0"/>
    </Style>

    <Style x:Key="DGColumnHeaderTextBlockStyle" TargetType="TextBlock" BasedOn="{StaticResource MetroTextBlock}">
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
    </Style>

    <Style x:Key="DGColumnHeaderStyle" TargetType="{x:Type DataGridColumnHeader}" BasedOn="{StaticResource MetroDataGridColumnHeader}">
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Height" Value="50"/>
        <Setter Property="Background" Value="AliceBlue"/>
        <Setter Property="ContentTemplate">
            <Setter.Value>
                <DataTemplate>
                    <TextBlock HorizontalAlignment="Stretch"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               Text="{Binding}"/>
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="DGColumnHeaderStyleFams" TargetType="{x:Type DataGridColumnHeader}" BasedOn="{StaticResource DGColumnHeaderStyle}">
        <Setter Property="ContentTemplate">
            <Setter.Value>
                <DataTemplate>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0"
                                   Text="СЕМЕЙСТВО:"
                                   Style="{StaticResource DGColumnHeaderTextBlockStyle}"/>
                        <TextBlock Grid.Row="1"
                                   Text="{Binding}"
                                   Style="{StaticResource DGColumnHeaderTextBlockStyle}"/>
                    </Grid>
                    
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="DGColumnHeaderStyleSourceSyms" TargetType="{x:Type DataGridColumnHeader}" BasedOn="{StaticResource DGColumnHeaderStyle}">
        <Setter Property="ContentTemplate">
            <Setter.Value>
                <DataTemplate>
                    <StackPanel Orientation="Vertical"
                                HorizontalAlignment="Center">
                        <TextBlock Text="СЕМЕЙСТВО : ТИП"
                                   Style="{StaticResource DGColumnHeaderTextBlockStyle}"/>
                        <TextBlock Text="ИСХОДНОЕ"
                                   Style="{StaticResource DGColumnHeaderTextBlockStyle}"/>
                    </StackPanel>
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="DGColumnHeaderStyleTargetSyms" TargetType="{x:Type DataGridColumnHeader}" BasedOn="{StaticResource DGColumnHeaderStyle}">
        <Setter Property="ContentTemplate">
            <Setter.Value>
                <DataTemplate>
                    <StackPanel Orientation="Vertical"
                                HorizontalAlignment="Center">
                        <TextBlock Text="СЕМЕЙСТВО : ТИП"
                                   Style="{StaticResource DGColumnHeaderTextBlockStyle}"/>
                        <TextBlock Text="НОВОЕ"
                                   Style="{StaticResource DGColumnHeaderTextBlockStyle}"/>
                    </StackPanel>
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="DGColumnHeaderStyleInstCounts" TargetType="{x:Type DataGridColumnHeader}" BasedOn="{StaticResource DGColumnHeaderStyle}">
        <Setter Property="ContentTemplate">
            <Setter.Value>
                <DataTemplate>
                    <StackPanel Orientation="Vertical"
                                HorizontalAlignment="Center">
                        <TextBlock Text="КОЛ. ЭКЗЕМПЛЯРОВ:"
                                   Style="{StaticResource DGColumnHeaderTextBlockStyle}"/>
                        <TextBlock Text="всего / копируемых"
                                   Style="{StaticResource DGColumnHeaderTextBlockStyle}"/>
                    </StackPanel>
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="DGCellStyleCenter" TargetType="DataGridCell" BasedOn="{StaticResource MetroDataGridCell}">
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
    </Style>

    <Style x:Key="DGRadioButtonStyle" TargetType="RadioButton" BasedOn="{StaticResource MetroRadioButton}">
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="6,2,2,2"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="IsEnabled" Value="False"/>
    </Style>

    <Style x:Key="DGButtonStyle" TargetType="Button" BasedOn="{StaticResource MetroButton}">
        <Setter Property="Margin" Value="2,2,2,2"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="MinWidth" Value="110"/>
    </Style>

    <Style x:Key="DGComboBoxStyle" TargetType="ComboBox" BasedOn="{StaticResource MetroComboBox}">
        <Setter Property="Margin" Value="2,5,2,5"/>
        <Setter Property="ItemTemplate">
            <Setter.Value>
                <DataTemplate>
                    <TextBlock
                        Text="{Binding Key}"
                        FontWeight="Bold"
                        FontSize="10"
                        TextAlignment="Center"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        Cursor="Arrow"
                        TextWrapping="WrapWithOverflow"/>
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="DGTextBox1Style" TargetType="TextBox" BasedOn="{StaticResource MetroTextBox}">
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="FontSize" Value="10"/>
        <Setter Property="TextAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Margin" Value="2,5,2,5"/>
        <Setter Property="IsReadOnly" Value="True"/>
        <Setter Property="Cursor" Value="Arrow"/>
        <Setter Property="TextWrapping" Value="WrapWithOverflow"/>
    </Style>

    <Style x:Key="DGTextBlockStyle" TargetType="TextBlock" BasedOn="{StaticResource MetroTextBlock}">
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="FontSize" Value="10"/>
        <Setter Property="TextAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Margin" Value="2,5,2,5"/>
        <Setter Property="Cursor" Value="Arrow"/>
        <Setter Property="TextWrapping" Value="WrapWithOverflow"/>
    </Style>

    <Style x:Key="ButtonStyleDefault" TargetType="Button" BasedOn="{StaticResource MetroButton}">
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="Width" Value="90"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="Margin" Value="5,0,5,0"/>
    </Style>

    <Style x:Key="TextBoxStyleDefault" TargetType="Button" BasedOn="{StaticResource MetroTextBox}">
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="Width" Value="90"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="Margin" Value="5,0,5,0"/>
    </Style>

    <Style x:Key="TextBlockStyleDefault" TargetType="TextBlock" BasedOn="{StaticResource MetroTextBlock}">
        <Setter Property="Foreground" Value="DodgerBlue"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="5,0,5,0"/>
    </Style>

    <Style x:Key="BackArrowButtonStyle" TargetType="Button" BasedOn="{StaticResource MetroButton}">
        <Setter Property="Height" Value="30"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="{TemplateBinding BorderThickness}" 
                            Padding="{TemplateBinding Padding}">
                        <Path Fill="DarkBlue" Stretch="Uniform" Width="15" Height="15" Data="M 10,0 L 0,10 L 10,20 Z"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="ForwardArrowButtonStyle" TargetType="Button" BasedOn="{StaticResource BackArrowButtonStyle}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="{TemplateBinding BorderThickness}" 
                            Padding="{TemplateBinding Padding}">
                        <Path Fill="DarkBlue" Stretch="Uniform" Width="15" Height="15" Data="M 0,0 L 10,10 L 0,20 Z"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="ComboBoxStyleDefault" TargetType="ComboBox" BasedOn="{StaticResource MetroComboBox}">
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="Margin" Value="10,0,10,0"/>
    </Style>

    <Style x:Key="RadioButtonStyleDefault" TargetType="RadioButton" BasedOn="{StaticResource MetroRadioButton}">
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,10,0,10"/>
        <Setter Property="FontWeight" Value="DemiBold"/>
    </Style>

    <Style x:Key="CheckBoxStyleDefault" TargetType="CheckBox" BasedOn="{StaticResource MetroCheckBox}">
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="10,10,0,10"/>
        <Setter Property="FontWeight" Value="DemiBold"/>
    </Style>


</ResourceDictionary>